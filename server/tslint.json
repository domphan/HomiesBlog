{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "new-parens": true,
        "no-unused-variable": true,
        "no-inferrable-types": true,
        "no-arg": true,
        "no-bitwise": true,
        "semicolon": true,
        "no-conditional-assignment": true,
        "quotemark": [
            true,
            "single"
        ],
        "interface-name": [
            false
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        }
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    }
}